# FutureFast.AI Environment Variables Template
# Copy this file to .env.local for local development
# Add these variables to Vercel for production

# ===================================
# FORM SUBMISSION NOTIFICATIONS
# ===================================

# Admin contact for receiving notifications
ADMIN_EMAIL=your-email@example.com
ADMIN_PHONE=+1234567890

# Email Service (choose one - MailerLite recommended)
MAILERLITE_API_KEY=your_mailerlite_api_key
# RESEND_API_KEY=your_resend_api_key
# SENDGRID_API_KEY=your_sendgrid_api_key

# SMS Service (optional - for text notifications)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# ===================================
# CMS & APIS
# ===================================

# Notion CMS Integration
NOTION_API_KEY=your_notion_integration_token
NOTION_DATABASE_ID=your_notion_database_id

# OpenAI for content processing
OPENAI_API_KEY=your_openai_api_key

# YouTube API
YOUTUBE_API_KEY=your_youtube_api_key

# ===================================
# STORAGE
# ===================================

# Vercel Blob Storage (for subscriber data)
BLOB_READ_WRITE_TOKEN=your_vercel_blob_token

# ===================================
# ADMIN AUTHENTICATION
# ===================================

# Admin credentials for /admin panel
ADMIN_USERNAME=admin
ADMIN_PASSWORD=your_secure_password
JWT_SECRET=your_jwt_secret_key_min_32_chars

# GitHub API (for content commits)
GITHUB_TOKEN=your_github_personal_access_token
GITHUB_REPO_OWNER=your_github_username
GITHUB_REPO_NAME=your_repo_name

# ===================================
# SECURITY & RATE LIMITING
# ===================================

# Cloudflare Turnstile (optional - for form spam prevention)
# NEXT_PUBLIC_TURNSTILE_SITE_KEY=your_site_key
# TURNSTILE_SECRET_KEY=your_secret_key
